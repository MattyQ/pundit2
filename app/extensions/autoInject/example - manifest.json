{
  "name": "Pundit Annotator Pro",
  "version": "0.0.3",
  "manifest_version": 2,
  "description": "Pundit Annotator Pro allows you to create semantic annotations on web pages.",
  "background": {
    "page": "html/background.html"
  },
  "homepage_url": "http://thepund.it",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/pundit-icon-48-close.png",
    "128": "icons/pundit-icon-128-close.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "icons/pundit-icon-19.png",
      "38": "icons/pundit-icon-38.png"
    },
    "default_title": "Launch Pundit Annotator Pro"
  },
  "permissions": [
    "tabs", "http://*/*", "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["http://europeana.eu/portal/record/*/*", "http://www.europeana.eu/portal/record/*/*"],
      "js": ["inject/resourceInject.js"],
      "run_at":    "document_start"
    }
  ],
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com https://cdn.mxpnl.com/libs/mixpanel-2-latest.min.js; object-src 'self'",
  "web_accessible_resources": [
    "inject/css/fonts/*.*",
    "inject/*.*"
  ]
}